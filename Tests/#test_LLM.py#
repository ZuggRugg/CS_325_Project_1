# Python test for LLM file

import sys
import pytest
sys.path.insert(0, '../')
import LLM as l
import os


# Test to make sure inputs folder exists
def test_inputs_folder_exists():
    assert os.path.isdir("../inputs"), "Filepath doesn't exist for inputs folder"


# test to make sure that data.txt exists and isn't empty
def test_data_txt_not_empty(): 
    filepath = '../inputs/data.txt'
    assert os.path.isfile(filepath), "data.txt does not exist"
    assert os.path.getsize(filepath) > 0, "data.txt file is empty"
